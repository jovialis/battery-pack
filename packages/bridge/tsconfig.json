{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
    // Inserts .js extensions to relative paths
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
    }
  }
}